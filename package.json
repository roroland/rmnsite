{
  "name": "rmn",
  "version": "1.0.0",
  "description": "My personal site",
  "main": "index.js",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^9.7.6",
    "concat": "^1.0.3",
    "live-server": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "sass": "^1.32.8"
  },
  "scripts": {
    "watch:sass": "sass --watch scss/style.scss css/style.css",
    "devserver": "live-server",
    "compile:sass": "sass scss/style.scss css/style.comp.css",
    "concat:css": "concat -o css/style.concat.css css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.concat.css -o css/style.prefix.css",
    "compress:css": "sass css/style.prefix.css css/style.css --output-style compressed",
    "start": "npm-run-all --parallel devserver watch:sass",
    "build": "npm-run-all compile:sass concat:css prefix:css compress:css"
  },
  "author": "Rodrigo Noales",
  "license": "ISC"
}
